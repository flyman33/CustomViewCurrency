<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dimens_50_dp"
    tools:parentTag="android.widget.LinearLayout"
    android:id="@+id/currency_view"
    android:orientation="horizontal"
    android:gravity="center">

    <EditText
        android:id="@+id/currency_edit_text"
        style="@style/CurrencyEditText"
        android:layout_width="@dimen/dimens_90_dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_10_dp"
        android:layout_marginStart="@dimen/dimens_10_dp"
        android:layout_marginBottom="@dimen/dimens_20_dp"
        android:backgroundTint="@color/purple_500"
        android:paddingBottom="@dimen/dimens_3_dp"/>

    <TextView
        android:id="@+id/currency_text"
        style="@style/CurrencyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_10_dp"
        android:layout_marginBottom="@dimen/dimens_10_dp"
        android:layout_marginEnd="@dimen/dimens_10_dp" />
</merge>